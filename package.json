{
  "name": "ytpicture",
  "version": "1.0.0",
  "description": "embed youtube player in picture in picture",
  "main": "App.js",
  "scripts": {
    "test": "electron ./App.js",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ytpicture",
    "dmg": {
      "icon": "./src/ressources/appRessources/icon.icns"
    },
    "mac": {
      "icon": "./src/ressources/appRessources/icon.icns"
    },
    "win": {
      "target": "squirrel",
      "icon": "./src/ressources/appRessources/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThomasT404/ytpicture.git"
  },
  "author": "Thomas Tastet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ThomasT404/ytpicture/issues"
  },
  "homepage": "https://github.com/ThomasT404/ytpicture#readme",
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "tailwindcss": "^1.2.0"
  }
}
